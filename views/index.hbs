{{#if products.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
            <div class="col">
                <div class="card-group">

                    <div class="card">
                        <img src={{image}} />
                        <div
                            class="card-body position-relative"
                            style="height: 120px;"
                        >
                            <p class="card-text">{{title}}</p>

                            <div
                                class="d-flex justify-content-end align-items-center"
                            >

                                <small
                                    class="text-body-secondary position-absolute bottom-0 fw-bold"
                                >{{formData createdAt}}</small>

                            </div>
                        </div>
                        <div class="card-footer">
                            <div
                                class="btn-group btn-group-sm"
                                role="group"
                                aria-label="Basic example"
                            >
                                <a
                                    type="button"
                                    class="btn btn-outline-primary"
                                    href="/view/{{_id}}"
                                >View</a>
                                {{#if @root.token}}
                                    {{#ifequal user @root.userId}}

                                        <a
                                            type="button"
                                            class="btn btn-outline-secondary"
                                            href="/edit-product/{{_id}}"
                                        >Edit</a>
                                        <a
                                            type="button"
                                            class="btn btn-outline-danger"
                                            href="/delete/{{_id}}"
                                        >Delete</a>
                                    {{/ifequal}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
{{else}}
    <p>No Product</p>
{{/if}}